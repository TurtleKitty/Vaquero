; set!

(sys.test 'set!
    (let (mute 1)
        (set! mute 2)
        (= mute 2)))

(sys.test 'set-other
    (let (mute 1)
        (set! mute "I'm a text!")
        (= mute "I'm a text!")))

(sys.test 'set-higher
    (let (mute 1)
