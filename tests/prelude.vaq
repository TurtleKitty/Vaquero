(test while
    (let (i (cell 0) total (cell 0))
        (def rv
            (while (< i.get 20)
                (total.set! (+ total.get i.get))
                i.inc!
                (list i.get total.get)))
        (= rv '(20 190))))

(test while-next
    (let (i (cell 0) total (cell 0))
        (def rv
            (while (< i.get 20)
                i.inc!
                (when (mod i.get 3)
                    (next (list 'next i.get total.get)))
                (total.set! (+ total.get i.get))
                (list i.get total.get)))
        (= rv '(next 20 63))))

(test while-last
    (let (i (cell 0) total (cell 0))
        (def rv
            (while (< i.get 20)
                i.inc!
                (when (> total.get 30)
                    (last (list 'last i.get total.get)))
                (total.set! (+ total.get i.get))
                (list i.get total.get)))
        (= rv '(last 9 36))))

(test for
    (= 210
        (for (i (cell 0) total (cell 0)) (<= i.get 20) i.inc!
            (total.set! (+ total.get i.get))
