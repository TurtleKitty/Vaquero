(test fold
   (let ()
      (def xs '(1 2 3))
      (def ys '(4 5 6))
      (def zs #(vector 7 8 9))
      (proc zap! (x y z acc)
         (+ x y z acc))
      (= 45
         (fold zap! 0 xs ys zs))))

(test fold-list-1
   (= 30 (fold (lambda (x acc) (* x acc)) 1 '(2 3 5)))) 

(test fold-list-n
   (let ()
      (def multiplexer
         (lambda (x y z acc) (pair (list x y z) acc))) 
      (= '((3 c baz) (2 b bar) (1 a foo))
         (fold multiplexer () '(1 2 3) '(a b c) '(foo bar baz)))))

(test fold-vector-1
