(test promise
    (let (count (cell 0))
        (def p
            (promise
                (seq
                    count.inc!
                    (* 3 4))))
        (and
            (= '(promise) p.type)
            (= 12 p.value)
            (= 12 p.value)
            (= 1 count.get))))

(test seal
   (let ()
      (def r (: x 1 y 2))
      (def sr (seal r pass: '(x y)))
      (def hr (seal r hide: '(set! del!)))
      (def xr (seal r pass: '() secret: 'foonballardy)) ; You know nothing about me!
      (proc handler (e k) true)

      (and
         (= sr.type '(sealed-object))
         (and (= sr.x 1) (= sr.y 2))
         (guard
            handler
            (hr.set! 0 2)
            false)
         (guard
            handler
            (xr.get 'x)
            false)
         (seq
            (r.set! 'x 2)
            true)
         (= sr.x 2)
         (= (hr.get 'x) 2)
         (guard
            handler
            (sr.unseal 'wrong)
            false)
         (send (xr.unseal 'foonballardy) 'x))))

