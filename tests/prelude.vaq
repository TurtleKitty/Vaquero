            (total.set! (+ total.get i.get))
            total.get)))

(test for-redo
    (= 220
        (for (i (cell 0) total (cell 0)) (<= i.get 20) i.inc!
            (when (mod total.get 2)
                (total.set! total.get.inc)
                (redo total))
            (total.set! (+ total.get i.get))
            total.get)))

(test for-last
    (= 105
        (for (i (cell 0) total (cell 0)) (<= i.get 20) i.inc!
            (when (> total.get 100)
                (last total.get))
